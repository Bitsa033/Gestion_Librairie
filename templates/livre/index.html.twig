{% extends 'base.html.twig' %}

{% block title %}Médiathèque!{% endblock %}

{% block content %}
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-0">Static Table</h5>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">N°</th>
                                <th scope="col">Livre</th>
                                <th scope="col">Année d'édition</th>
                                <th scope="col">Genre</th>
                                <th scope="col">Quantité</th>
                                <th scope="col">Auteur</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for item in livre %}
                                
                            <tr>
                                <th scope="row">{{item.id}}</th>
                                <td>{{item.nom}}</td>
                                <td>{{item.anneeEdition}}</td>
                                <td>{{item.genre}}</td>
                                <td>{{item.quantite}}</td>
                                <td>{{item.auteur.nom}}</td>
                            </tr>

                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by
            <a href="https://www.wrappixel.com">WrapPixel</a>.
        </footer>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
    
    {% endblock %}