{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper .code { background: yellow; padding: 2px 6px; }
    .voiture { color: blue; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="code">{{titre}}</h1>

    <table>
        <tr>
            <th>Nom du livre</th>
            <th>Année d'édition</th>
            <th>Genre</th>
            <th>Nb exemplaires</th>
            <th>Auteur</th>
        </tr>
        <tr>
            <form action="{{path('addLivre')}}" method="post">
                
                <td><input type="text" name="nom" id=""></td>
                <td><input type="text" name="annee" id=""></td>
                <td><input type="text" name="genre" id=""></td>
                <td><input type="text" name="nb" id=""></td>
                <td><input type="text" name="auteur" id=""></td>
            {# </form> #}
        </tr>
        <tr>
            <td>
                <button type="submit">Valider</button>
                </form>
            </td>
        </tr>
    </table>
    <table border="2">
        <tr>
            <th>Nom du livre</th>
            <th>Année d'édition</th>
            <th>Genre</th>
            <th>Nb exemplaires</th>
            <th>Auteur</th>
        </tr>
        
        {% for item in livre %}
        <tr>
            <td>
                {{ item.nom}}
            </td>
            <td>
                {{ item.anneeEdition}}
            </td>
            <td>
                {{ item.genre}}
            </td>
            <td>
                {{ item.quantite}}
            </td>
            <td>
                {{ item.auteur.nom}}
            </td>
            
        </tr>
        {% endfor %} 
        
    </table>
    
</div>
{% endblock %}
